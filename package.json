{
  "name": "dnd-character-manager",
  "version": "2.0.0",
  "description": "D&D 2024 Character Management PWA with Firebase",
  "private": true,
  "workspaces": [
    "frontend",
    "functions",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:functions": "npm run serve --workspace=functions",
    "build": "npm run build --workspace=shared && npm run build --workspace=frontend && npm run build --workspace=functions",
    "build:frontend": "npm run build --workspace=frontend",
    "build:functions": "npm run build --workspace=functions",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "emulators": "firebase emulators:start --project demo-test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
